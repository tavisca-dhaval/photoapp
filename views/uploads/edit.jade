div(class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
		div(class="modal-dialog" role="document")
			div.modal-content
				div.modal-header
					button(type="button" class="close" data-dismiss="modal" aria-label="Close")
						span(aria-hidden="true") &times;
					h4(class="modal-title" id="myModalLabel")= title

				div.modal-body

					label(for="categoryName") Category Name

					input(type="text" name="category" class="form-control" id="categoryName" placeholder="Category Name" value="#{category.catName}" old-value="#{category.catName}")
     
				div.modal-footer

					button(id="updatecategory" type="button" class="btn btn-primary") Update Category